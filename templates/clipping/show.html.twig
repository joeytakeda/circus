{% extends 'base.html.twig' %}

{% block title %}
    Clipping Detail: {{ clipping.originalName }}
{% endblock %}

{% block pageheader %}
    <h1 class="page-title">Clipping Detail: {{ clipping.originalName }}</h1>
{% endblock %}

{% block admin %}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class="btn-toolbar">
            <div class="btn-group">
                <a href="{{ path('clipping_edit', { 'id': clipping.id }) }}"
                    class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit Item </a>
                <a href="{{ path('clipping_delete', { 'id': clipping.id }) }}" class="btn btn-default" 
                    data-confirm="Are you sure you want to delete this Clipping?">
                <span class='glyphicon glyphicon-remove'></span> Delete Item </a>
        
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block body %}

    <article class="clipping">
        <section class="transcription">
            <h3 class="sr-only">Transcription</h3>
            <div class="transcription-content">
                {{ clipping.transcription|raw }}
            </div>
        </section>
        <section class="metadata">
            <div class="metadata-content">
                <a href="{{ asset(clipping_img_prefix ~ clipping.imageFilePath) }}">
                    <img 
                        src="{{ asset(clipping_img_prefix ~ clipping.thumbnailPath) }}" 
                        alt="{{ clipping.originalName }}" title="{{ clipping.originalName }}"/> 
                </a>
                <div class="metadata-body">
       
                    <table class="table">
                        <tbody>
                            <tr>
                                <th class="col-01">Image Number:</th>
                                <td class="col-02">{{ clipping.originalName }}</td>
                            </tr>
                            {% if is_granted('ROLE_USER') %}
                            
                            {% endif %}
                            <tr>
                                <th>Written Date:</th>
                                <td>{{ clipping.writtenDate }}</td>
                            </tr>
                            <tr>
                                <th>Date:</th>
                                <td>{{ clipping.date }}</td>
                            </tr>
                            <tr>
                                <th>Created:</th>
                                <td>{% if clipping.created %}{{ clipping.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Updated:</th>
                                <td>{% if clipping.updated %}{{ clipping.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Category:</th>
                                <td>
                                    <a href="{{ path('category_show', { 'id': clipping.category.id}) }}">
                                        {{ clipping.category }}
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th>Source:</th>
                                <td>
                                    <a href="{{ path('source_show', { 'id': clipping.source.id}) }}">
                                        {{ clipping.source }}
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            
            </div>
        </section>
    </article>            
{% endblock %}

{% block javascripts %}
{% endblock %}


# define the hosts
10.0.0.12:
    stage: staging
    become: ~
    deploy_path: ~
    user: ~
    ssh_multiplexing: false

# The settings key must start with a dot(.) to prevent it being treated as
# a host in the inventory.
.settings:
    application: ~
    repository: ~
    branch: master
    shared_dirs:
        - var/logs
        - var/sessions
        - var/cache
        - web/images/clippings
        - web/images/blog
    writable_dirs:
        - var/logs
        - var/sessions
        - var/cache
        - web/images/clippings
        - web/images/blog
    composer_options: 'install --no-progress --optimize-autoloader --no-interaction'
    site_path: /~

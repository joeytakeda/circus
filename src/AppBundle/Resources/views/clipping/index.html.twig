{% extends 'base.html.twig' %}

{% block title %}clippings{% endblock %}

{% block pageheader %}
    <h1>Clipping List</h1>
    <p class="count">
        Displaying {{ clippings|length }} clippings of {{ clippings.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('clipping_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
            <a href="{{ path('clipping_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    {% include 'AppBundle:clipping:partial/list.html.twig' %}

    <div class="navigation">
        {{ knp_pagination_render(clippings) }}
    </div>

{% endblock %}

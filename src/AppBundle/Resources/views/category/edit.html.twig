{% extends 'base.html.twig' %}

{# Category Edit Page #}

{% block title -%}
    Category Edit
{%- endblock %}

{% block classes -%}
    edit category-page
{%- endblock %}

{% block pageheader %}
    <h1 class="page-title">Edit Category:</h1>
{% endblock %} 

{% block body %}
    <div class="content">
        <div class="inner">
            <div class="content-full">
                <div class="inner">
                    {{ form_start(edit_form) }}
                    <div class="edit-wrapper">
                        {{ form_widget(edit_form) }}
                    </div>
                    <div class="form-group">
                        <div class="form-submit">
                            <div class="button-group">
                                <input type="submit" value="Update" class="btn btn-primary" />
                                <a href="{{ path('category_show', { 'id': category.id }) }}" class="btn btn-warning">Cancel</a>
                            </div>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% include 'NinesEditorBundle:editor:widget.html.twig' %}
{% endblock %}
